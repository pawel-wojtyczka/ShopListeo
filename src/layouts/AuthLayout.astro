---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "ShopListeo | Authentication" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background">
    <main class="container flex items-center justify-center min-h-screen py-8">
      <div class="w-full max-w-md space-y-6 p-6 bg-card rounded-lg shadow-sm border">
        <slot />
      </div>
    </main>
  </body>
</html>
